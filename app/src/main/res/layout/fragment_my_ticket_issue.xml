<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyTicketIssueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티켓 등록 확인"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_grey">

        <ImageView
            android:id="@+id/background_white"
            android:layout_width="1080px"
            android:layout_height="1960px"
            android:layout_alignParentTop="true"
            android:src="@drawable/background_white"
            android:scaleType="fitStart" />
        <ImageView
            android:id="@+id/Icon_bang"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginTop="130px"
            android:layout_marginLeft="482px"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_bang"
            android:scaleType="fitStart" />
        <TextView
            android:id="@+id/con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290px"
            android:layout_marginLeft="287px"
            android:text="축하합니다!\n티켓 발행이 완료되었어요"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#505050"
            android:textSize="50px"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/con"
            android:layout_marginTop="150px"
            android:src="@drawable/line1"/>

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginLeft="58px"
            android:layout_marginTop="40px"
            android:text="행사명 자리 행사명 자리 행사명 자리"
            android:textSize="36px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/icon_right"
            android:layout_below="@id/line1"
            android:layout_marginLeft="974px"
            android:layout_marginTop="40px"/>

        <TextView
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:layout_marginLeft="320px"
            android:layout_marginTop="40px"
            android:text="판매자"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_name"
            android:layout_marginLeft="320px"
            android:layout_marginTop="14px"
            android:text="예매일"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservation_date"
            android:layout_marginLeft="320px"
            android:layout_marginTop="14px"
            android:text="장소"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place"
            android:layout_marginLeft="320px"
            android:layout_marginTop="14px"
            android:text="관람일시"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="320px"
            android:layout_marginTop="14px"
            android:text="취소가능일시"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_date"
            android:layout_marginLeft="320px"
            android:layout_marginTop="14px"
            android:text="상태"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/seller_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="40px"
            android:text="판매자"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <TextView
            android:id="@+id/reservation_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_name_text"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="14px"
            android:text="예매일"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <TextView
            android:id="@+id/place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservation_date_text"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="14px"
            android:text="장소"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_text"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="14px"
            android:text="관람일시"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <TextView
            android:id="@+id/end_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_text"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="14px"
            android:text="취소가능일시"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_date_text"
            android:layout_marginLeft="520.48px"
            android:layout_marginTop="14px"
            android:text="상태"
            android:textSize="26px"
            android:textStyle="bold"
            android:textColor="#171717" />

        <ImageView
            android:id="@+id/img_ticket_main"
            android:layout_width="222px"
            android:layout_height="314px"
            android:layout_marginTop="714px"
            android:layout_marginLeft="58px"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_ticket_main"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/img_good"
            android:layout_width="1080px"
            android:layout_height="121px"
            android:layout_marginTop="73px"
            android:layout_below="@id/img_ticket_main"
            android:src="@drawable/img_good" />
    </RelativeLayout>
    </LinearLayout>
</FrameLayout>